



<%unless @sellers.blank?%>

        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="tables">Sellers</h1>
              
            </div>

            <div class="bs-example table-responsive">
              <table class="table table-striped table-hover" id="sunil_datatable">
                <tr>                  
                  <th>Name</th>
                  <th>Email</th>
                  <th>Address</th>>
                  <th>Mobile</th>
                  <th>Status</th>                  
                </tr>
                <tbody>
                <%@sellers.each do |seller|%>
	                <tr>	                
	                  <td><%=seller.first_name%></td>
	                  <td><%=seller.user.email%></td>
	                  <td><%=seller.address%></td>
	                  <td><%=seller.mobile%></td>
	                  <td><%=seller.status%></td>
	                   
	                </tr>
                <%end%>
                   
                </tbody>            
              </table>
            </div><!-- /example -->
          </div>
        </div>
      

<%else%>

<p> Sorry there is no record,<%=link_to "Add Product",new_seller_product_path(current_user.seller),:class=>"btn btn-primary" %></p>
<%end%>
