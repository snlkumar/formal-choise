

        <div class="row">
          <div class="col-lg-12">
            <fieldset>
            	<legend>Brands</legend>
            </fieldset>
              
            

            <div class="bs-example table-responsive">
              <table class="table table-striped table-hover" id="sunil_datatable">
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
                <tbody>
               <%unless @brands.blank?%>
                <%@brands.each do |brand|%>
	                <tr>
	                  <td>1</td>	
	                  <td><%=brand.name.capitalize%></td>
	                  <td><%=brand.status%></td>
	                  <input type="hidden" />	
	                  <td>
	                  	<%=link_to image_tag("../assets/edit.jpg",height: 20,width: 20),"#",{id: "edit-brand",brand_id: "#{brand.id}", name: "#{brand.name}",status: "#{brand.status}"}%> | <%=link_to image_tag("../assets/delete1.jpg",height: 20,width: 20),"#",{id: "delete_brand",brand_id: "#{brand.id}"}%>
	                  </td>
	                   
	                </tr>
                <%end%>
                <%else%>
                <tr>Sorry there is no record yet.</tr>
				   
				<%end%>
                   
                </tbody>            
              </table>
            </div><!-- /example -->
          </div>
        </div>
      

