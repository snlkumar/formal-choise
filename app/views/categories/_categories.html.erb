

        <div class="row">
          <div class="col-lg-12">
            <fieldset>
            	<legend>Categories</legend>
            </fieldset>
              
            

            <div class="bs-example table-responsive">
            <%unless @categories.blank?%>
              <table class="table table-striped table-hover" id="sunil_datatable">
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
                <tbody>               
                <%@categories.each do |cat|%>
	                <tr>
	                  <td>1</td>	
	                  <td><%=cat.name.capitalize%></td>
	                  <td><%=cat.status%></td>
	                  <input type="hidden" />	
	                  <td>
	                  	<%=link_to image_tag("../assets/edit.jpg",height: 20,width: 20),"#",{id: "edit_cat",category_id: "#{cat.id}", name: "#{cat.name}",status: "#{cat.status}"}%> | <%=link_to image_tag("../assets/delete1.jpg",height: 20,width: 20),"#",{id: "delete_category",category_id: "#{cat.id}"}%>
	                  </td>
	                   
	                </tr>
                <%end%>             
                   
                </tbody>            
              </table>
               <%else%>
                <tr>Sorry there is no record yet.</tr>
				   
				<%end%>
            </div><!-- /example -->
          </div>
        </div>
      

