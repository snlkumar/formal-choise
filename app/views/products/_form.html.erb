   <div class="row">
          <div class="col-lg-12 cufstom-form" >
            <div class="well">
              	<%= form_for [@seller,@product],:html=>{:class=>"bs-example form-horizontal"} do |f| %>
              	  	<div class="clr"></div>
				  	<% if @product.errors.any? %>   
				      <ul class="alert fade in alert-error">
				      <% @product.errors.full_messages.each do |msg| %>
				        <li><%= msg %></li>
				      <% end %>
				      </ul>
				    
				  <% end %>
                <fieldset>
                  <legend>New Seller</legend>
                  <div class="form-group">
                    <%=f.label :name,:class=>"col-lg-2 control-label"%>
                    <div class="col-lg-4">
                      <%= f.text_field :name, :required => true,:class=>"form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%=f.label :description,:class=>"col-lg-2 control-label"%>
                    <div class="col-lg-4">
                         <%= f.text_field :description, :required => true,:class=>"form-control" %>                      
                    </div>
                  </div>                
                 
                  <div class="form-group">
                    <%=f.label :price,:class=>"col-lg-2 control-label"%>
                    <div class="col-lg-4">
                    	<span class="input-group-addon col-lg-2 ccontrol-label">$</span>
                      <%= f.text_field :price, :required => true, :autofocus => true,:class=>"cform-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%=f.label :brand,:class=>"col-lg-2 control-label"%>
                    <div class="col-lg-4">
                         <%= f.text_field :brand, :required => true,:class=>"form-control" %>                      
                    </div>
                  </div>
                  <div class="form-group">
                    <%=f.label :category,:class=>"col-lg-2 control-label"%>
                    <div class="col-lg-4">
                         <%= f.text_field :category, :required => true,:class=>"form-control" %>                      
                    </div>
                  </div>
                 
                  <div class="form-group">
                    <%=f.label :seasion,:class=>"col-lg-2 control-label"%>
                    <div class="col-lg-4">
                      <%= f.text_field :seasion, :required => true,:class=>"form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%=f.label :color,:class=>"col-lg-2 control-label"%>
                    <div class="col-lg-4">
                         <%= f.text_field :color, :required => true,:class=>"form-control" %>                      
                    </div>
                  </div>
                  
               
                <div class="right-6px">
                	<div class="form-group">
                    <%=f.label :name,:class=>"col-lg-2 control-label"%>
                    <div class="col-lg-4">
                      <%= f.text_field :name, :required => true,:class=>"form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%=f.label :description,:class=>"col-lg-2 control-label"%>
                    <div class="col-lg-4">
                         <%= f.text_field :description, :required => true,:class=>"form-control" %>                      
                    </div>
                  </div>         
                </div>
                 </fieldset>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <%= f.submit "Sign in",:class=>"btn btn-primary" %>
                    </div>
                  </div>
              <%end%>
            
              </div></div>
          </div>
          <style type="text/css">
          	.cform-control{
          		height: 40px;
    width: 90%;
          	}
          	.ccontrol-label{
          		height: 39px;
          	}
          	.right-6px{
          		/*margin-left: 50%;*/
          	}
          </style>
