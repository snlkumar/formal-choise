<div class="row">
	<div class="span4">
		<script type="text/javascript">
			CloudZoom.quickStart();
		</script>

		<!-- <%@product.images.each do |image|%>
		<%=image_tag(image.image.url,height: 500,width: 400) unless image.blank?%>
		<%end%> -->
		<img class = "cloudzoom" src = "<%= @product.images.first.image.url(:small)%>"
		data-cloudzoom = "zoomImage: '<%= @product.images.first.image.url(:large)%>'" />
		<br/>
		<%@product.images.each do |image|%>
		<img class = 'cloudzoom-gallery' src = "<%= image.image.url(:thumb)%>" data-cloudzoom = "useZoom: '.cloudzoom', image: '<%= image.image.url(:small)%>', zoomImage: '<%= image.image.url(:large)%>' " >
		<%end%>
	</div>
	<div class="span5">
		<address>
			<strong><%= @product.name.capitalize%></strong>
			<h3 style="color: red;font: bold;"><%= number_to_currency(@product.price)%></h3>
			<strong>Brand:</strong><span><%= @product.brand.name.capitalize unless @product.brand.blank?%></span>
			<br>
			<strong>Color:</strong><span><%= @product.color.name unless @product.color.blank?%></span>
			<br>
			<strong>Seasion:</strong><span><%= @product.seasion.name.capitalize unless @product.seasion.blank?%></span>
			<br>
			<strong>Category:</strong><span><%= @product.category.name.capitalize unless @product.category.blank? %></span>
			<br>
			<strong>Tags:</strong><span><%= @product.tags.count%></span>
			<br>
		</address>
		<%= link_to "Add To Cart", cart_buyers_path(product_id: @product.id),method: "POST",class: "btn btn-danger" %>
	</div>
</div>
