      = form_for :order, url: user_checkout_path, method: "post" do |f|
        = f.hidden_field :order_amount, value: @order.grant_total
        = f.hidden_field :tax_price, value: @order.tax_price
        .pull-right= f.submit "Confirm order", class: "btn btn-success" -->
    <%else%>
    <div class="alert alert-danger">
    	<p> Oh snap! currently orders are unavailable for listing.</p>
    </div>
      
     <%end%>

